<% if notice %>
  <div class="alert alert-success" role="alert">
    <p id="notice"><%= notice %></p>
  </div>
<% end %>

<div>  
  <table class="table table-bordered table-striped table-hover">
    <thead>
      <tr>
        <th>Nome</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @departamentos.each do |departamento| %>
        <tr>
          <td><%= departamento.nome %></td>
          <td><%= button_to 'Ver Produtos', departamento, method: :get, class: "btn btn-primary"  %></td>
          <td><%= button_to 'Alterar', edit_departamento_path(departamento), method: :get, class: "btn btn-default" %></td>
          <td><%= button_to 'Remover', departamento, method: :delete, class: "btn btn-danger", data: { confirm: "Tem certeza que deseja remover o departamento #{departamento.nome}?" } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<div>
<br>
<%= link_to 'Novo Departamento', new_departamento_path %>
